{
  "name": "genara",
  "version": "1.0.1",
  "description": "A Number Validation & Generation Tool for Turkish and International Standards",
  "homepage": "https://github.com/emreerkan/genara#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/emreerkan/genara.git"
  },
  "bugs": {
    "url": "https://github.com/emreerkan/genara/issues"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "genara": "dist/cli/index.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./services/*": {
      "import": "./dist/services/*/index.js",
      "require": "./dist/services/*/index.js",
      "types": "./dist/services/*/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "start": "npm run build && node dist/cli/index.js",
    "dev": "ts-node src/cli/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --coverage --ci --watchAll=false",
    "release:dry-run": "npm pack --dry-run",
    "release:prepare": "npm run clean && npm ci && npm run lint && npm run test && npm run build",
    "lint": "tsc --noEmit",
    "lint:eslint": "eslint src/**/*.ts",
    "type-check": "tsc --noEmit",
    "format": "prettier --write src/**/*.ts",
    "clean": "rm -rf dist coverage",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "keywords": [
    "tckn",
    "vkn",
    "iban",
    "credit-card",
    "isbn",
    "ean",
    "upc",
    "imei",
    "validation",
    "generator",
    "turkish",
    "identification",
    "turkey"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.4.4",
    "ts-node": "^10.0.0",
    "typescript": "^5.9.2"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=16.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
